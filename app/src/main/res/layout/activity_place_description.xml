<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEDDF1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/top_bg">

            <ImageView
                android:id="@+id/placeImageId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="37dp"
                android:scaleType="fitXY"
                android:src="@drawable/rangamati" />

            <ImageView
                android:id="@+id/arrowImg"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_margin="30dp"
                android:src="@drawable/top_arrow"
                android:layout_alignParentLeft="true"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="30dp"
                android:src="@drawable/top_search"
                android:layout_alignParentRight="true"

                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:src="@drawable/rating"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/placeNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moster, Bosnia\nand Herzegovina"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/placeDescriptionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The heavenly land built with love\nand magic"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginLeft="40dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/img_1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"/>

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/img_2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"/>

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/img_3"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"/>

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/img_4"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"/>

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/img_5"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <Button
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/button_bg"
                    android:text="Book Destination"
                    android:textColor="#fff"
                    android:textSize="14dp" />

                <Button
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/arrow_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"/>

                <Button
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="55dp"
                    android:background="@drawable/bottom_arrow" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>



</ScrollView>